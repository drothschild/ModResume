%div#resumeID{ "resume_id" => session[:new_resume_id] }
.row
  .col-md-10.col-sm-10.text-center.col-centered
    .btn-group{role: "group"}
    -@tags = all_tags
    -@tags.each do |tag|
      - # %button.btn.btn-default.tag-button{"tag_id" => tag.id, "selected" => false}
      %a.btn.btn-default.tag-button.button-selected{"tag_id" => tag.id}
        =tag.name

.row
  .col-md-10.col-sm-10.col-centered
    - @assets.each do |key, values|
      %h2
        =key.capitalize
      -values.each do |asset|
        - asset_tags = get_asset_tag_ids(asset)
        %div{class: "asset-container", id:"#{key}_#{asset.id}",  asset_id: "#{asset.id}", tags: asset_tags.to_s}
          =render "/#{key}/show", asset_type: key, asset: asset, tags: asset_tags.to_s

#edit-form{:title => "Edit Asset"}
  .row
  .col-md-6.col-sm-6.col-centered#form-container


%a.btn.btn-default.button-selected.onwards{href: user_resume_url(current_user, session[:new_resume_id])}
  Onwards!


