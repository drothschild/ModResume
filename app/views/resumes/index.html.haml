.row
  .col-md-12.col-sm-12.text-center
    %button.btn.btn-default#new-resume-button{type: "button"} Add New Resume
    %div#new-resume-form
.row
  .col-md-12.col-sm-12
    %h2 Your Resumes
.row
  .col-md-12.col-sm-12
    %table.table.table-hover
      %tr
        %th Resume For:
        %th Last updated:
        %th
        %th
        %th
      - @resumes.each do |resume|
        %tr
          -# =link_to 'Resume', resume
          %td= link_to resume.target_job, user_resume_path(user_id: current_user.id, id: resume.id)
          %td= resume.updated_at.to_datetime.in_time_zone("Pacific Time (US & Canada)").strftime("%m/%d/%Y  %l:%M %p")
          %td Edit Assets
          %td Edit Text
          %td= link_to 'Delete', user_resume_path(user_id: current_user.id, id: resume.id), method: :delete

