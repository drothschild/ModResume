= form_for(resource, as: resource_name, html:{class:"form-inline login-form"}, url: session_path(resource_name)) do |f|
  = f.email_field :email, autofocus: true, placeholder: 'Email address'
  = f.password_field :password, autocomplete: "off", placeholder: 'Password'
  = f.submit "Log in", :class => "btn btn-default"
  - if devise_mapping.registerable? && controller_name != 'registrations'
    = link_to "Sign up", new_registration_path(resource_name)
