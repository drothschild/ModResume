.panel.panel-default{"id" => "Experience_#{asset.id}"}
  .panel-heading
    .row
      .col-md-10.col-sm-10
        %strong= asset.title
        %em= asset.company
        = asset.begin_date.strftime('%b %Y')
        to
        = asset.end_date.strftime('%b %Y')
      .col-md-2.col-sm-2
        = render "/assets/button_row", asset: asset, asset_type: asset_type
  .row
    .panel-body
      %ul
        - asset.descriptions.each do |description|
          %li
            -if current_url.include?("asset")
              = check_box_tag "experiences_#{description.id}", description.id, true, class: "asset-check-box"
            = description.detail
        %em= asset.location
