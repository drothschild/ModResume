%button.btn.btn-primary#save-resume-button{type: "button"}
  Save

.row
  .col-md-6.col-s-6.text-center.resume-template
    .row#divSection_1
      .col-md-12.col-s-12.resume-header
        %h3="#{current_user.first_name} #{current_user.last_name}"
        %br
        ="#{current_user.email}"

    .row#divSection_2
      .col-md-12.col-s-12.resume-content.resume-top-content

    .row#divSection_3
      .col-md-12.col-s-12.resume-content.resume-middle-split-content


  .col-md-6.col-s-6.resume-content.library
    -@asset_types = asset_types
    -@asset_types.each do |asset_type|
      .asset-portlet
        .asset-portlet-header=asset_type.capitalize
        .nested-sort
          .asset-portlet-content
          -@assets["#{asset_type}"].each do |asset|
            =render "#{asset_type}/show", asset_type: "#{asset_type}", asset: asset




