!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    %title ModResume
    %link{href: 'https://fonts.googleapis.com/css?family=Poiret+One|Lato:400,300,100,900', rel:'stylesheet', type:'text/css'}
    %link{href: "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css", rel: "stylesheet", integrity: "sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7", crossorigin: "anonymous"}
    %link{href: "https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css", :rel => "stylesheet"}
    %link{:href => "https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.4/themes/smoothness/jquery-ui.css", :rel => "stylesheet"}
      %script{:src => "https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.4/jquery-ui.min.js"}
    %script{:crossorigin => "anonymous", :integrity => "sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS", :src => "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"}
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = csrf_meta_tags
    %script{:src => "https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/2.0.0/handlebars.js"}

  %body
    .container
      %nav.navbar.navbar-default
        .navbar-inner
          .container-fluid
            .navbar-header
              %button.navbar-toggle.collapsed{"aria-expanded" => "false", "data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
                %span.sr-only Toggle navigation
                %span.icon-bar
                %span.icon-bar
                %span.icon-bar
              %a.navbar-brand{:href => "/"} ModResume

            .collapse.navbar-collapse
              %ul.nav.navbar-nav
                - if user_signed_in?
                  = render 'sessions/show'
                -else
                  = render 'sessions/new'



      -if notice
        %p.notice
          = notice
      -if alert
        %p.alert
          = alert
      = yield
