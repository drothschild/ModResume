%div#resumeID{ "resume_id" => session[:new_resume_id] }
.row
  .col-md-1.col-sm-1
  .col-md-10.col-sm-10
    .btn-group{role: "group"}
    -@tags = all_tags
    -@tags.each do |tag|
      - # %button.btn.btn-default.tag-button{"tag_id" => tag.id, "selected" => false}
      %a.btn.btn-default.tag-button.button-selected{"tag_id" => tag.id}
        =tag.name
  .col-md-1.col-sm-1
    %a.btn.btn-default.button-selected.onwards-floater{href: user_resume_url(current_user, session[:new_resume_id])}
      Next

.row
  .col-md-10.col-sm-10.col-centered
    - @assets.each do |key, values|
      %h2
        =key.capitalize
      -values.each do |asset|
        - asset_tags = get_asset_tag_ids(asset)
        %div{class: "asset-container", asset_id: "#{asset.id}", tags: asset_tags.to_s}
          =render "/#{key}/show", asset_type: key, asset: asset, tags: asset_tags.to_s


