= form_for [@user, @experience] do |f|
  %fieldset.form-group
    = f.label :company
    = f.text_field :company, class: "form-control"
  %fieldset.form-group
    = f.label :title
    = f.text_field :title, class: "form-control"
  %fieldset.form-group
    = f.label :begin_date 
    = f.date_select :begin_date, class: "form-control", discard_day: true
    = f.label :end_date 
    = f.date_select :end_date, class: "form-control", discard_day: true
  %fieldset.form_group
    = f.label :details
    = text_field_tag "experience[details][][detail]",nil,  class: "form-control detail"
    = button_tag "+", id: "add_detail"
    = button_tag "-", id: "remove_detail"
    = f.submit










